<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Sashimi.AzureAppService</AssemblyName>
    <RootNamespace>Sashimi.AzureAppService</RootNamespace>
    <TargetFramework>netstandard2.1</TargetFramework>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <Nullable>enable</Nullable>
    <OutputPath>bin\</OutputPath>
    <PackageProjectUrl>https://github.com/octopusDeploy/Sashimi.AzureAppService</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
  </PropertyGroup>
  <PropertyGroup>
    <NoWarn>NU5119</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\..\artifacts\Calamari.AzureAppService.zip">
      <Visible>false</Visible>
      <LinkBase>tools</LinkBase>
      <Pack>true</Pack>
      <PackagePath>tools/</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Octopus.Configuration" Version="2.1.0" />
    <PackageReference Include="Sashimi.Azure.Accounts" Version="9.0.2" />
    <PackageReference Include="Sashimi.Azure.Common" Version="9.0.2" />
    <PackageReference Include="Sashimi.AzureScripting" Version="11.0.2" />
  </ItemGroup>

</Project>
